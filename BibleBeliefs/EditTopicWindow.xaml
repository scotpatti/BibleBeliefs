<Window x:Class="BibleBeliefs.EditTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibleBeliefs"
        mc:Ignorable="d"
        Title="Edit Topic Dialog" Height="125" Width="362">
    <Grid>
        <Label Content="Edit Topic:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbTopic" Margin="10,41,10,0" Text="TextBox" TextWrapping="Wrap" Height="18" VerticalAlignment="Top"/>
        <Button x:Name="btOk" Content="_Ok" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Click="btOk_Click"/>
        <Button x:Name="btCancel" Content="_Cancel" HorizontalAlignment="Left" Margin="35,64,0,0" VerticalAlignment="Top" Click="btCancel_Click"/>
    </Grid>
</Window>
