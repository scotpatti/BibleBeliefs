<Window x:Class="BibleBeliefs.EditBeliefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Beliefs" Height="211" Width="440">
    <Grid>
        <Label Content="Belief Text:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbBeliefText" Margin="100,15,10,66" TextWrapping="Wrap"/>
        <Button x:Name="btOk" Content="_Ok" HorizontalAlignment="Left" Margin="10,0,0,10" Click="btOk_Click" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="btCancel" Content="_Cancel" Margin="34,0,0,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="45" Click="btCancel_Click"/>
        <Label Content="Move to Topic:" HorizontalAlignment="Left" Margin="10,0,0,35" Height="26" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="cbTopic" Margin="100,0,10,37" Height="22" VerticalAlignment="Bottom" />
    </Grid>
</Window>
